<h1>Images List</h1>
 
<%= link_to 'New Image', new_image_path %>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @images.each do |image| %>
    <tr>
      <td><%= link_to image.title, image_path(image) %></td>
      <td><%= image.description %></td>
      <td><%= link_to 'View', image_path(image) %></td>
      <td><%= link_to 'Edit', edit_image_path(image) %></td>
      <td><%= link_to 'Delete', image_path(image),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
