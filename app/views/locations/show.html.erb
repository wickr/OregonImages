<h2>Location</h2>

<p>
  <strong>Title:</strong>
  <%= @location.title %>
</p>
 
<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <strong>County:</strong>
  <%= @location.county %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.lat %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.lng %>
</p>

<p>
  <strong>Cultural Properties:</strong>
  <ul>
    <% CulturalProperty.where(:location_id => @location).each do |cp| %>
      <li><%= link_to cp.title, cultural_property_path(cp) %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Return to Locations List', locations_path %>
